{
  "name": "gen-ai-trip-planner-backend",
  "type": "module",
  "scripts": {
    "dev": "npx nodemon --exec tsx src/main.ts",
    "start": "tsx src/main.ts",
    "build": "tsc",
    "start:prod": "node dist/main.js",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "lint": "eslint \"src/**/*.{ts,js}\"",
    "lint:fix": "eslint \"src/**/*.{ts,js}\" --fix",
    "lint:format": "npm run format && npm run lint:fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:amadeus": "vitest run __tests__/amadeus.vendor.test.ts",
    "test:flight:dummy": "vitest run __tests__/flight.dummy.test.ts",
    "test:hotel:dummy": "vitest run __tests__/hotel.dummy.test.ts",
    "test:trip": "vitest run __tests__/trip.planning.test.ts",
    "test:validation": "vitest run __tests__/dummy.data.validation.test.ts",
    "test:destination": "vitest run __tests__/destination.validation.test.ts"
  },
  "dependencies": {
    "@google/genai": "^1.20.0",
    "@hono/node-server": "^1.19.0",
    "@types/jsonwebtoken": "^9.0.10",
    "axios": "^1.12.2",
    "crypto-js": "^4.2.0",
    "dotenv": "^17.2.2",
    "firebase-admin": "^13.5.0",
    "google-auth-library": "^10.3.0",
    "googleapis": "^159.0.0",
    "got": "^14.6.1",
    "hono": "^4.9.6",
    "jsonwebtoken": "^9.0.2",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@eslint/json": "^0.13.2",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^20.11.17",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.35.0",
    "globals": "^16.4.0",
    "jiti": "^2.5.1",
    "nodemon": "^3.1.10",
    "prettier": "^3.0.0",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.44.0",
    "vitest": "^1.6.0"
  }
}
